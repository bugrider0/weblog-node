<main class="main">
  <form action="/admin/add-post" method="POST">
    <div>
      <input
        type="text"
        name="title"
        placeholder="عنوان پست ..."
        class="post-title hover"
      />
    </div>
    <div class="row">
      <select name="status" class="hover">
        <option value="عمومی" selected>عمومی</option>
        <option value="خصوصی">خصوصی</option>
      </select>
      <div class="upload-image-container">
        <input type="file" id="selectedImage" />
        <label for="selectedImage" class="hover"
          ><span class="fas fa-image"></span
        ></label>
        <button type="button" id="imageUpload" class="hover">
          <span class="fa fa-upload fa-1x"></span>
        </button>
        <div class="progressBar-container" id="progressDiv">
          <div class="progressBar" id="progressBar">
            <p id="imageStatus"></p>
          </div>
        </div>
      </div>
    </div>
    <div>
      <textarea class="textarea hover" name="body" id="editor"></textarea>
    </div>
    <div class="btns">
      <input type="submit" class="btn-success" value="ساخت پست" />
      <a href="/admin/dashboard" class="btn btn-warning m-2 hover">انصراف</a>
    </div>
  </form>
</main>

<% if (typeof errors !== "undefined" && errors.length > 0) { %>
<!-- --------------------- -->
<%- include ("../../includes/singnupPageMessages.ejs") -%>
<!-- ------------------------------------------------ -->
<% } %>
