<% if (blogs.length > 0) { %>
<!-- -------------------- -->
<div class="blogs">
  <table>
    <thead>
      <tr>
        <th>#</th>
        <th>عنوان پست</th>
        <th>تاریخ</th>
        <th>وضعیت</th>
      </tr>
    </thead>
    <tbody>
      <% for(let i=0; i < blogs.length; i++) { %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= blogs[i].title %></td>
        <td><%= blogs[i].createDate %></td>
        <td><%= blogs[i].status %></td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>
<!-- ----- -->
<% } else { %>
<!-- ----- -->
<div class="no-blog-msg">
  <p>شما هیچ پستی ندارید</p>
  <hr />
  <a href="/admin/add-post">افزودن پست</a>
</div>
<!---->
<% } %>
