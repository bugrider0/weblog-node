<% if (blogs.length > 0) { %>
<!-- -------------------- -->
  <div class="blogs">
    <table>
      <thead>
        <tr>
          <th>شمار</th>
          <th>عنوان پست</th>
          <th>تاریخ</th>
          <th>حذف</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < blogs.length; i++) { %>
          <tr>
            <td class="<%= blogs[i].status === 'خصوصی' ? 'bg-warn' : 'bg-success' %>"><a href="/admin/toggle-status/<%= blogs[i].id %> "><%= i + 1 %></a></td>
            <!-- ------------------------------------------------------------------------------------ -->
            <td class="blog-title"><a href="/admin/edit-post/<%= blogs[i].id %>"><%= blogs[i].title %></a></td>
            <!-- ------------------------------------------------------------------------------------------ -->
            <td><%= dateToJalali(blogs[i].createDate) %></td>
            <!-- ------------------------------------------------------------------------------------- -->
            <td><a href="/admin/delete-post/<%= blogs[i].id %>"><span class="fa fa-trash"></span></a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
<!-- ----- -->
<% } else { %>
<!-- ----- -->
  <div class="no-blog-msg">
    <p>شما هیچ پستی ندارید</p>
    <hr />
    <a href="/admin/add-post">افزودن پست</a>
  </div>
<!---->
<% } %>
