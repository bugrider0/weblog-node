<header class="header"><h2>ثبت نام</h2></header>

<main class="main">
  <form action="/users/signup" method="post">
    <input
      type="text"
      name="fullName"
      placeholder="نام و نام خانوادگی"
      autofocus
    />
    <input type="email" name="email" placeholder="ایمیل" />
    <input type="password" name="password" placeholder="رمز عبور" />
    <input type="password" name="repeatPassword" placeholder="تکرار رمز عبور" />
    <input type="submit" value=" ایجاد حساب " />
  </form>
</main>

<% if (!errors.length > 0) { %>
<!-- ---------------- -->
<footer class="footer">
  <p>اگر حساب دارید بروید به صفحه</p>
  <a href="/users/login">ورود</a>
</footer>
<!-- ----- -->
<% } else { %>
<!-- ----- -->
<%- include ("../includes/singnupPageMessages.ejs") -%>
<!-- --------------------------------------- -->
<% } %>
